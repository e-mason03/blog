---
layout: base.njk
title: All Posts
---

<ul class="post-list">
{% for post in collections.posts | reverse %}
    <li class="post-item">
        <h2 class="post-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <div class="post-meta">{{ post.date | dateDisplay }}</div>
        <div class="post-excerpt">{{ post.data.description or post.templateContent | striptags | truncate(200) }}</div>
    </li>
{% endfor %}
</ul>