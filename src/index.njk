---
layout: base.njk
title: Home
---

<div class="intro">
    <p>{{ site.description }}</p>
</div>

<h2>Recent Posts</h2>

<ul class="post-list">
{% for post in collections.posts | reverse %}
    <li class="post-item">
        <h3 class="post-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h3>
        <div class="post-meta">{{ post.date | dateDisplay }}</div>
        <div class="post-excerpt">{{ post.data.description or post.templateContent | striptags | truncate(200) }}</div>
    </li>
{% endfor %}
</ul>